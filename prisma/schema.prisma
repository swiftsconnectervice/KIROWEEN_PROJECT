generator client {
  provider = "prisma-client-js"
}

datasource db {
  // SQLite for simplicity (data resets on each Render deploy, but OK for demo)
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}

model Claim {
  id            String   @id
  policyNumber  String
  claimantName  String
  location      String
  damageType    String
  amount        Float
  dateOfLoss    DateTime
  status        String
  decision      String?
  fraudRisk     String?
  aiReasoning   String?
  weatherEvent  String?
  createdAt     DateTime @default(now())
}

model AuditLog {
  id          String   @id @default(cuid())
  timestamp   DateTime @default(now())
  action      String   // CLAIM_PROCESSED, FRAUD_DETECTED, CLAIM_APPROVED, etc.
  claimId     String?
  decision    String?
  hookName    String?  // on-fraud-detected, on-claim-approved, etc.
  details     String?  // JSON string with additional context
  source      String   @default("agent") // agent, api, system
}