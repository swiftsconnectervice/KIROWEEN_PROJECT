// LOCAL DEVELOPMENT SCHEMA (SQLite)
// To use: copy this file to schema.prisma for local dev

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Claim {
  id            String   @id
  policyNumber  String
  claimantName  String
  location      String
  damageType    String
  amount        Float
  dateOfLoss    DateTime
  status        String
  decision      String?
  fraudRisk     String?
  aiReasoning   String?
  weatherEvent  String?
  createdAt     DateTime @default(now())
}
